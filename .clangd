CompileFlags:
  Add:
    - -std=c++17
    - --cuda-path=/opt/cuda
    - -I/opt/cuda/include
    - --cuda-gpu-arch=sm_75 
  Remove:
    - -rdc=true
    - --forward-unknown-to-host-compiler
    - -fno-gpu-rdc
    - -G
    - -Xcompiler=-fPIC
    - --generate-code=*
    - --expt-relaxed-constexpr
    - --compiler-bindir
    - --options-file
    - -forward-unknown-to-host-compiler


SemanticTokens:
  DisabledKinds: [InactiveCode]
